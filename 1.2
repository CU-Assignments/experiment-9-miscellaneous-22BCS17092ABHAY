public class PascalsTriangle {

    // Function to print Pascal's Triangle
    public static void printPascalsTriangle(int rows) {
        for (int i = 0; i < rows; i++) {
            int number = 1;  // First number in each row is always 1
            for (int j = 0; j <= i; j++) {
                System.out.print(number + " ");
                number = number * (i - j) / (j + 1);  // Calculate the next number in the row
            }
            System.out.println();
        }
    }

    public static void main(String[] args) {
        int rows = 5;  // You can change this value to print more or fewer rows
        printPascalsTriangle(rows);
    }
}
